{
    "appenders": {
      "server": {
        "type": "dateFile",
        "filename": "logs/server.log",
        "pattern": "-yyyy-MM-dd",
        "numBackups": 3
      },
      "errorFile": {
        "type": "file",
        "filename": "logs/errors.log"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      }
    },
    "categories": {
      "default": { "appenders": [ "server", "errors" ], "level": "DEBUG" }
    }
  }